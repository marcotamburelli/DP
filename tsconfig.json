{
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "module": "commonjs",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "types": [
      "node",
      "jasmine"
    ],
  },
  "include": [
    "src/**/*",
    "spec/**/*"
  ],
  "exclude": [
    "node_modules",
    "bower_components",
    "jspm_packages",
    "tmp",
    "temp"
  ]
}